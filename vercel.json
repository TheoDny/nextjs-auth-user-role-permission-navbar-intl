{
    "buildCommand": "pnpm vercel-build",
    "installCommand": "pnpm install",
    "framework": "nextjs",
    "regions": ["fra1"],
    "functions": {
        "app/api/**/*.ts": {
            "maxDuration": 30
        },
        "app/**/*.tsx": {
            "maxDuration": 30
        }
    },
    "crons": [
        {
            "path": "/api/cron/reset-database",
            "schedule": "0 0 * * *"
        }
    ],
    "env": {
        "SKIP_ENV_VALIDATION": "true"
    },
    "build": {
        "env": {
            "SKIP_ENV_VALIDATION": "true"
        }
    }
}
